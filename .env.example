# .env.example
# Copy to .env and fill in your details.

# Repositories to sync (comma-separated slugs)
REPOS=repo1,repo2

# Source Bitbucket Workspace
SOURCE_WORKSPACE=source-workspace-slug
SOURCE_USERNAME=your-source-username
SOURCE_APP_PASSWORD=your-source-app-password # Needs read access to repos

# Destination Bitbucket Workspace
DEST_WORKSPACE=destination-workspace-slug
DEST_USERNAME=your-destination-username
DEST_APP_PASSWORD=your-destination-app-password # Needs write/admin access to repos
DEST_PROJECT_KEY=DEST_PROJECT_KEY # IMPORTANT: Must exist in destination workspace